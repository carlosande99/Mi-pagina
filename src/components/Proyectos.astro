---
    import Code from '../images/code.svg'
    import React from '../images/react.svg'
    import Bootstrap from '../images/bootstrap.svg'
    import Github from '../images/github.svg'
    import Link from '../images/link.svg'
    import pokeApi from '../images/pokeApi.webp'
---

<section class="section undefined scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl py-16" id="proyectos">
    <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white undefined">
        <Code width={30} height={30} class="text-white" id="code"/> 
        Proyectos
    </h2>
    <div class="flex flex-col gap-y-16">
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
            <div class="w-full md:w-1/2">
                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                    <img src={pokeApi.src} alt="imagen de PokeApi">
                </div>
            </div>
            <div class="w-full md:w-1/2 md:max-w-lg">
                <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">PokeAPI</h3>
                <div class="flex flex-wrap mt-2">
                    <ul class="flex flex-row mb-2 gap-x-2">
                        <li>
                            <span class="flex gap-x-2 rounded-full text-xs bg-[#0D3B66] text-white py-1 px-2">
                                <React width={15} height={15} />
                                React
                            </span>                                                     
                        </li>
                        <li>
                            <span class="flex gap-x-2 rounded-full text-xs bg-[#563D7C] text-white py-1 px-2">
                                <Bootstrap width={15} height={15} />
                                Bootstrap
                            </span>
                            
                        </li>
                    </ul>
                    <div class="mt-2 text-gray-700 dark:text-gray-400">
                        <span>
                            Buscador de pokemons por regiones o generaciones y buscador de datos del pokemon. 
                        </span>
                    </div>
                    <footer class="flex items-end justify-start mt-4 gap-x-4">
                        <a href="https://github.com/carlosande99/pokeApi" class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                            <Github width={20} height={20} class="text-white"/>
                            Code
                        </a>
                        <a href="" class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                            <Link width={20} height={20} class="text-white"/>
                            Preview
                        </a>
                    </footer>
                </div>
            </div>
        </article>
    </div>
</section>