        <div class="">
            <h3 class="text-lg front-bold mb-4 dark:text-white">Lenguajes</h3>
            <ul class="inline-flex flex-col list-disc list-insid w-full md:w-1/2 lg:w-4/5">
                <li class="flex gap-x-2 rounded-full text-sm bg-[#FFCA28] text-white py-1 px-2 mb-1 items-center">
                    <Js width={15} height={15} class="text-black"/>
                    <i class="min-w-[22px] text-black text-center">JavaScript</i>
                </li>
                <li class="flex gap-x-2 rounded-full text-sm bg-[#777bb3] text-white py-1 px-2 mb-1 items-center">
                    <Php width={18} height={18}/>
