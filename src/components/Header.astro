---
    import ThemeToggle from "../components/ButtonTheme.astro";
---
<header class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2 transition-all">
    <nav id="navbar" class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center 
    items-center transition-all duration-300">
        <a href="#experiencia" class="relative block px-2 py-2 hover:text-blue-500">Experiencia</a>
        <a href="#proyectos" class="relative block px-2 py-2 hover:text-blue-500">Proyectos</a>
        <a href="#habilidades" class="relative block px-2 py-2 hover:text-blue-500">Habilidades</a>
        <a href="#yo" class="relative block px-2 py-2 hover:text-blue-500">Sobre m√≠</a>
        <ThemeToggle />
    </nav>
</header>

<script>
  const navbar = document.getElementById("navbar");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      navbar?.classList.add("bg-gray-200","dark:bg-gray-600", "dark:bg-opacity-80", "shadow-md");
    } else {
      navbar?.classList.remove("bg-gray-200","dark:bg-gray-600", "dark:bg-opacity-80", "shadow-md");
    }
  });
</script>

      
